<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="cats-db">
        <description>
            Persistence unit for the Cats Database
        </description>

        <class>org.FishFromSanDiego.cats.models.Cat</class>
        <class>org.FishFromSanDiego.cats.models.User</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:2732/cats_db"/>
            <property name="jakarta.persistence.jdbc.user" value="cats_db_admin"/>
            <property name="jakarta.persistence.jdbc.password" value="cats123"/>

            <!-- Automatically export the schema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="false"/>
        </properties>

    </persistence-unit>

</persistence>